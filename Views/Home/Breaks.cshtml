@model SeatingChart.Models.HomeIndexViewModels

@{
    Layout = null;
}

@Html.Partial("_Header")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal userTable">
        <h4>Are you sure you want to delete @Html.DisplayFor(modelItem => modelItem.DisplayName)?</h4>
        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-secondary" onclick="HiddenValue()">Delete</button>
                <a href="../Home/Admin" class="btn btn-secondary" style="margin-left:1em;">Cancel</a>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
